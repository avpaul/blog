doctype html
html(lang="en")

    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="theme-color" content="#222")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="icon" href="/images/favicon-wb-192.png" sizes="192 192" type="image/png")
        link(rel="icon" href="/images/favicon-wb-96.png" sizes="96 96" type="image/png")
        link(rel="stylesheet" href="/build/main.css")
        title= title
    body.login
        nav
            .nav-wrapper
                a.brand-logo.waves-effect.waves-classic(href="/admin") 
                    img(src="/images/blog-logo.svg", alt="", srcset="")
    
        div
            .flex-center
                form()
                    h2 Hello! Sign In
                    .row
                        .input-field.col-12
                            input#email(type="email" )
                            label(for="email").text-capitalize Your Email
                        .input-field.col-12
                            input#password(type="password")
                            label(for="password").text-capitalize Your Password
                        .col-12
                            btn.btn#signIn Sign me in
                        .col-12
                            p
                                a(href="#") Create your account now!
                            p
                                a(href="#") Forgot your Password or Email?
        footer.fixed-bottom
            .row
                .col-12
                    div Hire me 
                .col-12
                    div Designed with much 
                        i.fas.fa-heart
                        |&nbsp; in Gisenyi
        
        script(type="text/javascript" src="/build/vendors~main.chunk.js")
        script(type="text/javascript" src="/build/editor.chunk.js")
        script(type="text/javascript" src="/build/icons.chunk.js")
        script(type="text/javascript" src="/build/jquery.chunk.js")
        script(type="text/javascript" src="/build/materialize.chunk.js")
        script(type="text/javascript" src="/build/popper.chunk.js")
        script(type="text/javascript" src="/build/main.js")